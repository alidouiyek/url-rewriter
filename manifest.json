{
	"manifest_version": 2,
	
	"name": "URL Rewriter",
	"author": "Joshua Foster",
	"version": "0.1",
	"description": "Rewrite URLs according to a custom regex when accessing a web page.",
	
	"icons": {
		"16": "images/icon16.png",
		"64": "images/icon64.png",
		"128": "images/icon128.png"
	},
	
	"options_page": "options.html",
	
	"permissions": [
		"storage",
		"webNavigation",
		"tabs"
	],
	
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	
	"browser_action": {
		"default_icon": {
			"19": "images/icon19.png"
		},
		"default_title": "URL Rewriter"
	}
}
